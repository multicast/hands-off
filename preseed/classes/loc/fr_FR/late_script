# Environment variable: ${class}

set -e

. /tmp/HandsOff-fn.sh

echo "debug: Running..."

checkflag dbg/flags all-x late-x && set -x

# Workaround https://bugs.debian.org/792823
cat > /target/etc/default/keyboard <<EOF
# KEYBOARD CONFIGURATION FILE

# Consult the keyboard(5) manual page.

XKBMODEL="pc105"
XKBLAYOUT="fr"
XKBVARIANT="oss"
XKBOPTIONS=""

BACKSPACE="guess"
EOF

in-target dpkg-reconfigure -pcritical keyboard-configuration
