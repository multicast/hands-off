# adapted from gb

# set language to english for the installer (dutch not available?)
d-i debian-installer/language string en
d-i debian-installer/locale string nl_NL.UTF-8
d-i debian-installer/country string NL

d-i time/zone string Europe/Amsterdam

d-i localechooser/supported-locales en_US.UTF-8, nl_NL.UTF-8

# Keyboard selection.
d-i keyboard-configuration/xkb-keymap select us
d-i console-keymaps-at/keymap select us

d-i mirror/http/hostname string ftp.nl.debian.org
d-i mirror/http/directory string /debian
base-config apt-setup/hostname string ftp.nl.debian.org





