### Disable network configuration entirely.
# This is useful for cdrom installations on non-networked devices
# where the network questions, warning and long timeouts are a
# nuisance.
d-i netcfg/enable boolean false

# Do not use mirror
d-i apt-setup/use_mirror boolean false

# Avoid additional repository since there is no network
d-i apt-setup/services-select multiselect

# No upgrade
d-i pkgsel/upgrade select none
