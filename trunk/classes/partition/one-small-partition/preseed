#comment this siince it undoes what hw/ida needs to do
#d-i    partman-auto/disk               string /dev/discs/disc0/disc
d-i    partman-auto/method             string regular
d-i    partman-auto/choose_recipe      select one-small-partition
d-i    partman/confirm_write_new_label boolean true
d-i    partman/choose_partition        select Finish partitioning and write changes to disk
d-i    partman/confirm                 boolean true

# needed to shut up complaint about unused keep_2 lv
d-i partman-basicmethods/method_only boolean false

# this is the normal "multi" recipe except that a fallow volume is created
# d-i partman-auto/expert_recipe         string one-small-partition :: 256 512 2000 ext3 $primary{ } $bootable{ } method{ format } format{ } use_filesystem{ } filesystem{ ext3 } mountpoint{ / } . 64 512 300% linux-swap method{ swap } format{ } . 100 10000 1000000000 ext2 method{ keep } .
d-i partman-auto/expert_recipe string one-small-partition :: 40 50 100 ext3 $primary{ } $bootable{ } method{ format } format{ } use_filesystem{ } filesystem{ ext3 } mountpoint{ /boot } .  500 1000 1000 ext3 method{ format } format{ } use_filesystem{ } filesystem{ ext3 } mountpoint{ / } .  64 512 300% linux-swap method{ swap } format{ } .  100 10000 1000000000 ext2 method{ keep } .
